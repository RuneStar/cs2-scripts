// 2232
[clientscript,magic_flash](component $component0, int $int1, int $int2)
$int2 = calc($int2 - 1);
if ($int2 <= 0) {
	$int2 = 15;
	if ($int1 = 1) {
		if_settrans(250, $component0);
	} else {
		if_settrans(0, $component0);
	}
	$int1 = calc(1 - $int1);
}
if_setontimer("magic_flash($component0, $int1, $int2)", magic_spellbook:3);
