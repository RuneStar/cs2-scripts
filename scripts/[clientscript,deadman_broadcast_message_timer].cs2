// 2808
[clientscript,deadman_broadcast_message_timer](int $clock0)
def_int $int1 = calc(clientclock - $clock0);
if ($int1 < 475) {
	if_setsize(scale(~min($int1, 25), 25, 16384), 60, ^setsize_2, ^setsize_abs, interface_90:21);
} else if ($int1 < 500) {
	if_setsize(scale(~max(calc(500 - $int1), 0), 25, 16384), 60, ^setsize_2, ^setsize_abs, interface_90:21);
} else {
	if_sethide(true, interface_90:21);
	if_settext("", interface_90:24);
	if_setontimer(null, interface_90:20);
	return;
}
